rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function getUserPractices() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             ? getUserData().practices 
             : [];
    }
    
    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserData().role == "admin";
    }
    
    function hasAccessToPractice(practiceId) {
      return isAuthenticated() && practiceId in getUserPractices();
    }

    // Practices collection - public read for booking form dropdowns
    match /practices/{practiceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users collection - staff members with practice associations
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Only admins can create/update user profiles (or the user themselves)
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Bookings collection - THE CORE SECURITY
    match /bookings/{bookingId} {
      // Patients can CREATE bookings (no auth needed for public booking)
      // Must include a valid practiceId
      allow create: if request.resource.data.practiceId is string &&
                       request.resource.data.practiceId in ["ruimsig", "weltevreden"];
      
      // Public can READ bookings (needed for patient booking flow to check availability)
      // This allows patients to see existing bookings to check for conflicts
      // Staff can only READ bookings for practices they belong to
      allow read: if true; // Public read for availability checking
      
      // Updates and deletes require proper authentication and practice access
      allow update, delete: if isAuthenticated() &&
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          resource.data.practiceId in getUserPractices();
    }

    // Patients collection - for patient records
    match /patients/{patientId} {
      // Public can create patients (for booking flow)
      allow create: if true;
      // Staff can read patients (any authenticated staff)
      allow read: if isAuthenticated();
      // Updates and deletes require authentication
      allow update, delete: if isAuthenticated();
    }

    // Admin override - admins have full access to all collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
